@model DoctorsWebApplication.Models.GPSurgery

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>GP Surgery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SurgeryName" class="control-label">Surgery Name</label>
                <input asp-for="SurgeryName" class="form-control" />
                <span asp-validation-for="SurgeryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartConsultDate" class="control-label">Start Consult Date</label>
                <input asp-for="StartConsultDate" class="form-control" />
                <span asp-validation-for="StartConsultDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndConsultDate" class="control-label">End Consult Date</label>
                <input asp-for="EndConsultDate" class="form-control" />
                <span asp-validation-for="EndConsultDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CurrentFlag" /> Current Flag
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
