@model DoctorsWebApplication.Models.Appointment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="DoctorId" class="control-label">Doctor Name</label>
                <select asp-for="DoctorId" class ="form-control" asp-items="ViewBag.DoctorList"></select>
            </div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label">Patient Name</label>
                <select asp-for="PatientId" class ="form-control" asp-items="ViewBag.PatientList"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartAppointment" class="control-label">Start Appointment</label>
                <input asp-for="StartAppointment" class="form-control" />
                <span asp-validation-for="StartAppointment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndAppointment" class="control-label">End Appointment</label>
                <input asp-for="EndAppointment" class="form-control" />
                <span asp-validation-for="EndAppointment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Floor" class="control-label">Floor Number</label>
                <input asp-for="Floor" class="form-control" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room" class="control-label">Room Number</label>
                <input asp-for="Room" class="form-control" />
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
